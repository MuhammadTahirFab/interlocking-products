<div class="configurator-sidebar">
  <h3>Settings</h3>
  <label for="color-option">Select Color:</label>
  <select id="color-option">
    <option value="red">Red</option>
    <option value="blue">Blue</option>
    <option value="green">Green</option>
  </select>

  <label for="size-option">Select Size:</label>
  <select id="size-option">
    <option value="small">Small</option>
    <option value="medium">Medium</option>
    <option value="large">Large</option>
  </select>

  <button id="apply-options">Apply</button>
</div>

<div class="configurator-canvas">
  <h3>Preview</h3>
  <div id="canvas-preview">
    <p>Selected settings will appear here.</p>
  </div>
</div>
